<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/aboutThisApp_paddingMedium"
        android:layout_marginTop="@dimen/aboutThisApp_paddingSmall"
        android:layout_marginEnd="@dimen/aboutThisApp_paddingMedium"
        android:layout_marginBottom="@dimen/aboutThisApp_paddingSmall"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:id="@+id/aboutThisAppLinks_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/aboutThisApp_paddingSmall"
            android:paddingTop="@dimen/aboutThisApp_paddingSmall"
            android:paddingEnd="@dimen/aboutThisApp_paddingSmall"
            android:paddingBottom="@dimen/aboutThisApp_paddingSmall"
            android:text="@string/about_this_app_play"
            android:textAllCaps="false"
            android:textColor="?attr/aboutThisApp_textPrimary"
            app:drawableTopCompat="@drawable/ic_util_icon_play" />

        <TextView
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:id="@+id/aboutThisAppLinks_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/aboutThisApp_paddingSmall"
            android:paddingTop="@dimen/aboutThisApp_paddingSmall"
            android:paddingEnd="@dimen/aboutThisApp_paddingSmall"
            android:paddingBottom="@dimen/aboutThisApp_paddingSmall"
            android:text="@string/about_this_app_email"
            android:textAllCaps="false"
            android:textColor="?attr/aboutThisApp_textPrimary"
            app:drawableTopCompat="@drawable/ic_util_icon_email" />

        <TextView
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:id="@+id/aboutThisAppLinks_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/aboutThisApp_paddingSmall"
            android:paddingTop="@dimen/aboutThisApp_paddingSmall"
            android:paddingEnd="@dimen/aboutThisApp_paddingSmall"
            android:paddingBottom="@dimen/aboutThisApp_paddingSmall"
            android:text="@string/about_this_app_website"
            android:textAllCaps="false"
            android:textColor="?attr/aboutThisApp_textPrimary"
            app:drawableTopCompat="@drawable/ic_util_icon_website" />

        <TextView
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:id="@+id/aboutThisAppLinks_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/aboutThisApp_paddingSmall"
            android:paddingTop="@dimen/aboutThisApp_paddingSmall"
            android:paddingEnd="@dimen/aboutThisApp_paddingSmall"
            android:paddingBottom="@dimen/aboutThisApp_paddingSmall"
            android:text="@string/about_this_app_github"
            android:textAllCaps="false"
            android:textColor="?attr/aboutThisApp_textPrimary"
            app:drawableTopCompat="@drawable/ic_util_icon_github" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>